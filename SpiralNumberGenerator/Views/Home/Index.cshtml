@model int?[,]

@using System.Diagnostics
@using BusinessLogic

@{
    <h2>Spiral Number Generator</h2>
    
    using (Html.BeginForm("Index", "Home", FormMethod.Post, new { Class = "row g-3" }))
    {
        
        <div class="col-3">            
            <input type="number" class="form-control" name="InputNumber" max="100000" min="0" id="InputNumber" placeholder="Input a integer" required>
        </div>

        <div class="col-auto">
            <input class="btn btn-primary" type="submit"  value="Generate Spiral" />
        </div>
    }
    <br />
    

    <table class="table table-bordered">
        @{
            if (Model != null)
            {

                int arraySize = Model.GetLength(0);

                for (int y = 0; y < arraySize; y++)
                {
                    <tr>

                        @for (int x = 0; x < arraySize; x++)
                        {
                            int? value = Model[x, y];

                            if (value != null)
                            {
                                if (value == 0)
                                {
                                    //Mark the center point
                                    <td class="table-success">@value</td>
                                }
                                else
                                {
                                    <td>@value</td>
                                }
                            }
                            else
                            {
                                <td>&nbsp;</td>
                            }
                        }
                    </tr>
                }
            }
        }
    </table>

    }
