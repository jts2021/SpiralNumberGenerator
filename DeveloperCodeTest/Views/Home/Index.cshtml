@{
    ViewBag.Title = "Home Page";
}

@using System.Diagnostics

@{
    int number = 24;

    bool done = false;
    int rightDownStepSize = 1;
    int leftUpStepSize = 2;

    int x = 2;
    int y = 2;
    int currentNumber = 0;

    int[,] arr = new int[5, 5];


    //Target:
    //       0  1  2  3  4
    //          
    //  0   20 21 22 23 24
    //  1   19  6  7  8  9
    //  2   18  5  0  1 10
    //  3   17  4  3  2 11
    //  4   16 15 14 13 12


    //for (int i = 0; i < number; i++)
    //{

    //}




    while (!done)
    {
        //Go Right
        for (int i = 0; i < rightDownStepSize; i++)
        {


            Debug.WriteLine($"x: {x}  y: {y}  val:{currentNumber}");

            arr[x, y] = currentNumber;
            if (currentNumber == number) { done = true; break; }
            currentNumber++;

            x++;

        }


        //Go Down
        for (int i = 0; i < rightDownStepSize; i++)
        {


            Debug.WriteLine($"x: {x}  y: {y}  val:{currentNumber}");
            arr[x, y] = currentNumber;
            if (currentNumber == number) { done = true; break; }
            currentNumber++;
            y++;
        }


        //Go Left
        for (int i = 0; i < leftUpStepSize; i++)
        {


            Debug.WriteLine($"x: {x}  y: {y}  val:{currentNumber}");
            arr[x, y] = currentNumber;
            if (currentNumber == number) { done = true; break; }
            currentNumber++;
            x--;
        }



        //Go Up
        for (int i = 0; i < leftUpStepSize; i++)
        {


            Debug.WriteLine($"x: {x}  y: {y}  val:{currentNumber}");
            arr[x, y] = currentNumber;
            if (currentNumber == number) { done = true; break; }
            currentNumber++;
            y--;
        }

        rightDownStepSize += 2;

        //if (rightDownStepSize == 1)
        //{
        //    rightDownStepSize += 2;
        //}
        //else
        //{
        //    rightDownStepSize++;
        //}

        leftUpStepSize+=2;

    }

<table class="table">
    @{
        for (int i = 0; i < 5; i++)
        {
            <tr>

                @for (int j = 0; j < 5; j++)
                {
                    <td>@arr[j, i]  (@i, @j)</td>
                }
            </tr>
        }
    }
</table>

}